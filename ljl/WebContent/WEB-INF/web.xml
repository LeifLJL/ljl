<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name></display-name>	
  
  <filter><!--过滤器配置-->
  	<filter-name>EncodingFilter</filter-name>
  	<filter-class>com.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>EncodingFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  
  
  <servlet><!--servlet类路径配置-->
    <servlet-name>DengluServlet</servlet-name>
    <servlet-class>com.servlet.DengluServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ZhuceServlet</servlet-name>
    <servlet-class>com.servlet.ZhuceServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Searchall</servlet-name>
    <servlet-class>com.servlet.Searchall</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteServlet</servlet-name>
    <servlet-class>com.servlet.DeleteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateServlet</servlet-name>
    <servlet-class>com.servlet.UpdateServlet</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>diaoyu</servlet-name>
    <servlet-class>com.servlet.diaoyu</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>reServelet</servlet-name>
    <servlet-class>com.servlet.reServelet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>blogServlet</servlet-name>
    <servlet-class>com.servlet.blogServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getBlog</servlet-name>
    <servlet-class>com.servlet.getBlog</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>upblog</servlet-name>
    <servlet-class>com.servlet.upblog</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>rbServlet</servlet-name>
    <servlet-class>com.servlet.rbServlet</servlet-class>
  </servlet>
 
 
 
  <servlet-mapping><!--servlet类映射配置-->
    <servlet-name>DengluServlet</servlet-name>
    <url-pattern>/DengluServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ZhuceServlet</servlet-name>
    <url-pattern>/ZhuceServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Searchall</servlet-name>
    <url-pattern>/Searchall</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteServlet</servlet-name>
    <url-pattern>/DeleteServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateServlet</servlet-name>
    <url-pattern>/UpdateServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>diaoyu</servlet-name>
    <url-pattern>/diaoyu</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>reServelet</servlet-name>
    <url-pattern>/reServelet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>blogServlet</servlet-name>
    <url-pattern>/blogServlet</url-pattern>
  </servlet-mapping> 
  <servlet-mapping>
    <servlet-name>getBlog</servlet-name>
    <url-pattern>/getBlog</url-pattern>
  </servlet-mapping>  
  <servlet-mapping>
    <servlet-name>upblog</servlet-name>
    <url-pattern>/upblog</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>rbServlet</servlet-name>
    <url-pattern>/rbServlet</url-pattern>
  </servlet-mapping>   
  
  
  <welcome-file-list><!--默认首页地址-->
    <welcome-file>Login.jsp</welcome-file>
  </welcome-file-list>
</web-app>